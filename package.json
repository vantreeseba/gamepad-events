  "description": "",
  "main": "index.js",
  "browser": "dist/index.js",
  "devDependencies": {
    "chai": "^4.1.0",
    "husky": "^0.14.3",
    "mocha": "^5.2.0",
    "npm-watch": "^0.3.0",
    "nyc": "^11.2.1",
    "webpack": "^4.16.3",
    "webpack-command": "^0.4.1"
  },
  "nyc": {
    "exclude": [
      "dist",
      "test",
      "docs",
      "webpack.config.js"
    ]
  },
  "watch": {
    "test": {
      "patterns": [
        "test",
        "test/**",
        "."
      ],
      "extensions": "js",
      "quiet": true
    }
  },
  "scripts": {
    "watch": "npm-watch test",
    "test": "nyc -r text --all mocha --recursive -u exports",
    "build-dist": "webpack",
    "build-readme": "jsdoc2md -t README.hbs -f *.js > README.md",
    "build-changelog": "conventional-changelog -i CHANGELOG.md -s -r 0",
    "version": "npm run build-dist && npm run build-readme && git add README.md && npm run build-changelog && git add CHANGELOG.md",
    "postversion": "git push && git push --tags"
  },
  "author": "vantreeseba@gmail.com",
